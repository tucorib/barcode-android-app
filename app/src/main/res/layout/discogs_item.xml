<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discogs_cover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formName"
                android:text="@string/discogs_artist"/>
            <TextView
                android:id="@+id/discogs_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formValue"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formName"
                android:text="@string/discogs_album"/>
            <TextView
                android:id="@+id/discogs_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formValue"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formName"
                android:text="@string/discogs_year"/>
            <TextView
                android:id="@+id/discogs_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/formValue" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/discogs_misc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>